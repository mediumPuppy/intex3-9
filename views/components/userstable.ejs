<div class="admin-child-two">
  
  <table style="width:100%;" >
    <thead style="text-align: left;">
      <tr>
        <th>User ID</th>
        <th>Username</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% data.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td><%= user.email %></td>
          <td>
            <a href="/edituser/<%= user.id %>">🖉</a>
            <a href="/deleteuser/<%= user.id %>" onclick="return confirm('Are you sure you want to delete this user?');">🗑️</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
